{
    "name": "Geoguessr Plus",
    "description": "Enhance the Geoguessr experience!",
    "version": "1.0",
    "manifest_version": 3,
    "action": {
        "default_popup": "popup.html"
    },
    "icons": {
        "16": "assets/icons/favicon_128.png",
        "32": "assets/icons/favicon_128.png",
        "48": "assets/icons/favicon_128.png",
        "128": "assets/icons/favicon_128.png"
    },
    "background": {
        "service_worker": "background.js"
    },
    "permissions": [
        "webNavigation", "scripting"
    ],
    "host_permissions": [
        "*://*.geoguessr.com/*"
    ],
    "web_accessible_resources": [{
        "resources": ["/assets/icons/*.svg", "/styles/*.css"],
        "matches": ["*://*.geoguessr.com/*"]
    }]
}